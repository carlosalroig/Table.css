/* ✅ ✅ FIX AVANZADO PARA BAJAR LOS TOTALES */

/* Mantener el cuerpo como cuerpo */
table.reportTable tbody {
  display: table-row-group !important;
}

/* Forzar TFOOT si existe */
table.reportTable tfoot {
  display: table-footer-group !important;
}

/* Caso estándar: TOTAL en <tr class="total"> */
table.reportTable tbody tr.total {
  display: table-footer-group !important;
}

/* Caso donde Looker mete la clase total en <td> */
table.reportTable tbody tr:has(td.total) {
  display: table-footer-group !important;
}

/* Caso donde Looker inserta totals en una tabla separada */
div.reportTable tfoot,
div.reportTable table tfoot {
  display: table-footer-group !important;
}

/* Garantizar que cualquier fila con .total baje */
tr.total, tr.total td {
  display: table-footer-group !important;
}
